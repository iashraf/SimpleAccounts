<%= form_for @expense, :html => { :class => 'form-horizontal' } do |f| %>
	<div class="control-group">
		<%= f.label :date, :class => 'control-label' %>
		<div class="controls">
			<%= f.date_select :date, :class => 'date_select', :order => [:day, :month, :year] %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :item, :class => 'control-label' %>
		<div class="controls">
			<%= f.text_field :item, :class => 'text_field' %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :amount, :class => 'control-label' %>
		<div class="controls">
			<div class="input-prepend">
				<span class="add-on">&pound;</span>
				<%= f.number_field :amount, :class => 'number_field' %>
			</div>
		</div>
	</div>

	<div class="form-actions">
		<%= f.submit nil, :class => 'btn btn-primary' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
								expenses_path, :class => 'btn' %>
	</div>
<% end %>
