<div class="container">
	<div class="row-fluid">
		
		<div class="span6">
			
			<div class="page-header">
				<h1>Invoices</h1>
			</div>

			<table class="table table-striped">
				
				<thead>
					<tr>
						<th>Date sent</th>
						<th>Date paid</th>
						<th>Client</th>
						<th>Amount</th>
					</tr>
				</thead>

				<tbody>
					<% @invoices.each do |invoice| %>
					<tr>
						<td><%= invoice.date_sent %></td>
						<td><%= invoice.date_paid %></td>
						<td><%= invoice.client.name %></td>
						<td><%= number_to_currency invoice.amount, :unit => "&pound;", :separator => ".", :delimiter => "," %></td>
					</tr>
					<% end %>
				</tbody>

				<tfoot>
					<tr>
						<td></td>
						<td></td>
						<td>Total</td>
						<td><%= number_to_currency @totalIncome, :unit => "&pound;", :separator => ".", :delimiter => "," %></td>
					</tr>
				</tfoot>

			</table>

			<br/>

			<%= link_to "New invoice", new_invoice_path, :class => 'btn btn-primary' %>

		</div><!--/span6-->

		<div class="span6">
			
			<div class="page-header">
				<h1>Expenses</h1>
			</div>

			<table class="table table-striped">
				
				<thead>
					<tr>
						<th>Date of purchase</th>
						<th>Item description</th>
						<th>Amount</th>
					</tr>
				</thead>

				<tbody>
					<% @expenses.each do |expense| %>
					<tr>
						<td><%= expense.date %></td>
						<td><%= expense.item %></td>
						<td><%= number_to_currency expense.amount, :unit => "&pound;", :separator => ".", :delimiter => "," %></td>
					</tr>
					<% end %>
				</tbody>

				<tfoot>
					<tr>
						<td></td>
						<td>Total</td>
						<td><%= number_to_currency @totalExpenditure, :unit => "&pound;", :separator => ".", :delimiter => "," %></td>
					</tr>
				</tfoot>

			</table>

			<br/>

			<%= link_to "New expense", new_expense_path, :class => 'btn btn-primary' %>

		</div><!--/span6-->

	</div><!--/row-->
</div> <!-- /container -->




