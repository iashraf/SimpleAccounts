
<div class="container">
	<div class="row-fluid">
		
		<div class="span6">
			
			<h1>Invoices</h1>

			<table class="table">
				
				<thead>
					<tr>
						<th>Date sent</th>
						<th>Date paid</th>
						<th>Client</th>
						<th>Amount</th>
					</tr>
				</thead>

				<tbody>
					<% @invoices.each do |invoice| %>
					<tr>
						<td><%= invoice.date_sent %></td>
						<td><%= invoice.date_paid %></td>
						<td><%= invoice.client.name %></td>
						<td><%= invoice.amount %></td>
					</tr>
					<% end %>
				</tbody>

			</table>

			<br/>

			<%= link_to "New invoice", new_invoice_path, :class => 'btn btn-primary' %>

		</div><!--/span6-->

		<div class="span6">
			
			<h1>Expenses</h1>

			<table class="table">
				
				<thead>
					<tr>
						<th>Date bought</th>
						<th>Item</th>
						<th>Amount</th>
					</tr>
				</thead>

				<tbody>
					<% @expenses.each do |expense| %>
					<tr>
						<td><%= expense.date %></td>
						<td><%= expense.item %></td>
						<td><%= expense.amount %></td>
					</tr>
					<% end %>
				</tbody>

			</table>

			<br/>

			<%= link_to "New expense", new_expense_path, :class => 'btn btn-primary' %>

		</div><!--/span6-->

	</div><!--/row-->
</div> <!-- /container -->




